{
  "name": "admob-sync-app",
  "author": {
    "name": "Appodeal Inc.",
    "email": "info@appodeal.com"
  },
  "productName": "AdMob Sync",
  "description": "Appodeal AdmobSync application",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "webpack --watch --progress --config=webpack/development.ts",
    "test": "jest",
    "electron": "electron ./build",
    "build": "webpack --progress --config=webpack/production.ts",
    "dist": "electron-builder",
    "dist:all": "node dist.js"
  },
  "build": {
    "appId": "com.electron.admob.desktop",
    "productName": "AdMob Sync",
    "directories": {
      "buildResources": "./resources",
      "app": "./build",
      "output": "./dist"
    },
    "extraResources": [
      {
        "from": "build/assets/images",
        "to": "assets/images"
      }
    ],
    "mac": {
      "target": "dmg",
      "darkModeSupport": true
    },
    "dmg": {
      "artifactName": "${name}-${version}.${ext}",
      "icon": "dmgIcon.icns",
      "background": "resources/dmgBg.png",
      "iconSize": 120,
      "iconTextSize": 18,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 115,
          "y": 230,
          "type": "file",
          "name": "AdMob Sync.app"
        },
        {
          "x": 422,
          "y": 230,
          "type": "link",
          "name": "Applications",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "artifactName": "${name}-setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "deb",
      "category": "Utility",
      "artifactName": "${name}-setup-${version}.${ext}"
    }
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "./src/**/*.{ts,tsx}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testMatch": [
      "**/*.spec.+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@brigad/ideal-image-loader": "^1.1.0",
    "@types/fs-extra": "^5.0.5",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.9",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^11.9.6",
    "@types/package-json": "^5.0.0",
    "@types/react": "^16.8.5",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "@types/zen-push": "^0.1.0",
    "clean-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "file-loader": "^3.0.1",
    "generate-json-webpack-plugin": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@sentry/electron": "^0.16.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-batch-http": "^1.2.8",
    "apollo-link-context": "^1.0.15",
    "apollo-link-error": "^1.1.7",
    "electron-platform": "^1.2.0",
    "fs-extra": "^7.0.1",
    "graphql": "^14.1.1",
    "graphql-tag": "^2.10.1",
    "json-stable-stringify": "^1.0.1",
    "jwt-decode": "^2.2.0",
    "lodash.trim": "^4.5.1",
    "mobx": "^5.9.0",
    "raven-js": "^3.27.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "zen-push": "^0.2.1"
  }
}
